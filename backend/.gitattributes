# Enforce LF line endings for all text files
* text=auto eol=lf

# Windows batch scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts must stay LF
*.sh text eol=lf
Makefile text eol=lf

# Source code (Java, XML, YAML, JSON, SQL)
*.java text eol=lf
*.kt text eol=lf
*.groovy text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.properties text eol=lf
*.ini text eol=lf

# Config & dotfiles
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.dockerignore text eol=lf
.env.example text eol=lf

# Documentation
*.md text eol=lf diff=markdown
LICENSE text eol=lf
README* text eol=lf
CONTRIBUTING* text eol=lf
CODE_OF_CONDUCT* text eol=lf
*.puml text eol=lf

# Templates
*.mustache text eol=lf
*.tpl text eol=lf

# Binary files (no EOL conversion)
*.jar binary
*.war binary
*.ear binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tgz binary
*.bz2 binary
*.xz binary
*.7z binary

# Ensure wrapper JAR is treated as binary
.mvn/wrapper/maven-wrapper.jar binary
